{% include './inc/header.liquid' %}
<section class="login-content">
    <div class="container h-100">
       <div class="row align-items-center justify-content-center h-100">
          <div class="col-12">
             <div class="row align-items-center">
                <div class="col-lg-6">
                   <h2 class="mb-2">Sign Up</h2>
                   <p>Enter your personal details and start journey with us.</p>
                   <form id="regform">
                      <div class="row">
                         <div class="col-lg-6">
                            <div class="form-group">
                               <label class="mb-0">Full Name</label>
                               <input class="form-control" type="text" required minlength="4" name="fname" id="fname" placeholder=" ">
                               
                            </div>
                         </div>
                         <div class="col-lg-6">
                            <div class="form-group">
                               <label class="mb-0">Email</label>
                               <input class="form-control" name="email" id="email" required minlength="6" type="email" placeholder=" ">
                               
                            </div>
                         </div>
                         
                         <div class="col-lg-6">
                            <div class="form-group">
                               <label class="mb-0">Password</label>
                               <input class="form-control" name="auth" id="auth" required minlength="4" type="password" placeholder=" ">
                               
                            </div>
                         </div>
                         <div class="col-lg-6">
                            <div class="form-group">
                               <label class="mb-0">Confirm Password</label>
                               <input class="form-control" name="authv" id="authv" required minlength="4" type="password" placeholder=" ">
                               
                            </div>
                         </div>
                         <div class="col-lg-12">
                            <div class="custom-control custom-checkbox mb-3">
                               <input type="checkbox" class="custom-control-input" id="customCheck1">
                               <label class="custom-control-label" for="customCheck1">I agree with the terms of use</label>
                            </div>
                         </div>
                      </div>
                      <button type="submit" id="btnSub" class="btn btn-primary btn-lg">Sign Up</button>
                      <p class="mt-3">
                         Already have an Account <a href="./" class="text-primary"> <div class="spinner spinner-border"></div> Sign In</a>
                      </p>
                   </form>
                </div>
                <div class="col-lg-6 mb-lg-0 mb-4 mt-lg-0 mt-4">
                   <img src="../assets/images/login/01.png" class="img-fluid w-80" alt="">
                </div>
             </div>
          </div>
       </div>
    </div>
 </section>
{% if scripts %}
{% for script in scripts %}
<script src="{{script}}"></script>
{% endfor %}
{% endif %}
 {% include './inc/footer.liquid' %}